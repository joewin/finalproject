<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="main_button_style">
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_margin">@dimen/space_normal</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>
    <style name="MyHeadLine" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textSize">@dimen/header_font_size</item>
    </style>
    <style name="MySubTitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textSize">@dimen/subtitle_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- TODO: Add necessary styles -->

</resources>
